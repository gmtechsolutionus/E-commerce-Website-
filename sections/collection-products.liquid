<div class="collection-products" style="margin:3rem 0">
  {% paginate collection.products by 12 %}
    <div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(280px,1fr));gap:1.5rem">
      {% for product in collection.products %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
    
    {% if paginate.pages > 1 %}
      <div class="pagination" style="display:flex;justify-content:center;gap:1rem;margin-top:3rem">
        {% if paginate.previous %}
          <a href="{{ paginate.previous.url }}" class="btn">Previous</a>
        {% endif %}
        
        <span class="muted">Page {{ paginate.current_page }} of {{ paginate.pages }}</span>
        
        {% if paginate.next %}
          <a href="{{ paginate.next.url }}" class="btn">Next</a>
        {% endif %}
      </div>
    {% endif %}
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "Collection Products",
  "settings": []
}
{% endschema %}
