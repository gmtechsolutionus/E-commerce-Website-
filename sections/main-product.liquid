<div class="product-main" style="display:grid;grid-template-columns:1fr 1fr;gap:3rem;margin:3rem 0">
  <div class="product-images">
    {% if product.featured_image %}
      <div class="card" style="padding:1rem">
        {{ product.featured_image | image_url: width: 1200 | image_tag: alt: product.title }}
      </div>
    {% endif %}
  </div>
  
  <div class="product-info">
    <h1 style="font-size:2.5rem;margin:0 0 1rem">{{ product.title }}</h1>
    <div style="font-size:1.75rem;margin-bottom:1.5rem">{{ product.price | money }}</div>
    
    {% if product.description != blank %}
      <div class="muted" style="margin-bottom:2rem">
        {{ product.description }}
      </div>
    {% endif %}
    
    {% form 'product', product %}
      <div style="display:flex;gap:1rem;align-items:center;margin-bottom:1rem">
        <label for="Quantity">Quantity:</label>
        <input type="number" id="Quantity" name="quantity" value="1" min="1" class="input" style="width:80px">
      </div>
      
      {% if product.available %}
        <button type="submit" class="btn" style="width:100%;padding:1rem;font-size:1.1rem">
          Add to Cart
        </button>
      {% else %}
        <button type="button" class="btn" disabled style="width:100%;padding:1rem;opacity:0.5">
          Sold Out
        </button>
      {% endif %}
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "Product Information",
  "settings": []
}
{% endschema %}
